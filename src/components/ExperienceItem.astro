---
interface Props {
  titleEs: string;
  titleEn: string;
  company: string;
  descriptionEs: string;
  descriptionEn: string;
  link?: string;
  dateEs: string;
  dateEn: string;
  location?: string;
}

const {
  titleEs,
  titleEn,
  company,
  descriptionEs,
  descriptionEn,
  link,
  dateEs,
  dateEn,
  location,
} = Astro.props;
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-34px] before:block before:h-full before:border-l-2 before:border-white/75 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4"
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-blue-300 -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <h3 class="text-xl font-bold text-blue-300 whitespace-pre-line">
        <span class="i18n-es">{titleEs}</span>
        <span class="i18n-en">{titleEn}</span>
      </h3>
      <h4 class="font-semibold text-xl text-white-600 dark:text-white">
        {company}
      </h4>
      {location && (
        <p class="text-sm text-white-600/80 dark:text-white/80">{location}</p>
      )}
      <time class="p-0 m-0 text-sm text-white-600/80 dark:text-white/80">
        <span class="i18n-es">{dateEs}</span>
        <span class="i18n-en">{dateEn}</span>
      </time>
    </div>
  </div>
  <div
    class="relative flex flex-col gap-2 pb-4 px-4 py-4 text-white-600 dark:text-white-300 md:col-span-3 rounded-xl border border-white/5 bg-slate-900/40 shadow-[0_18px_45px_rgba(15,23,42,0.65)] transition-transform transition-shadow duration-300 hover:-translate-y-1 hover:shadow-[0_24px_70px_rgba(15,23,42,0.9)]"
  >
    <p class="i18n-es">{descriptionEs}</p>
    <p class="i18n-en">{descriptionEn}</p>
    {
      link && (
        <a href={link} target="_blank" class="text-blue-500 underline">
          {link}
        </a>
      )
    }
  </div>
</div>
