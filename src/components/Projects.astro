---
import GithubIcon from "./icons/GithubIcon.astro";
import LinkButton from "./LinkButton.astro";
import SpringbootIcon from "./icons/SpringbootIcon.astro";
import AngularIcon from "./icons/AngularIcon.astro";
import JavaIcon from "./icons/JavaIcon.astro";
import HTMLIcon from "./icons/HTMLIcon.astro";
import CSSIcon from "./icons/CSSIcon.astro";
import BootstrapIcon from "./icons/BootstrapIcon.astro";
import TypeScriptIcon from "./icons/TypeScriptIcon.astro";
import PostmanIcon from "./icons/PostmanIcon.astro";
import JWTIcon from "./icons/JWTIcon.astro";
import NextIcon from "./icons/NextIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import MongoIcon from "./icons/MongoIcon.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import FirebaseIcon from "./icons/FirebaseIcon.astro";
import JestIcon from "./icons/JestIcon.astro";

const TAGS = {
  FirebaseIcon: {
    name: "Firebase",
    class: "border text-white",
    icon: FirebaseIcon,
  },
  JestIcon: {
    name: "Jest",
    class: "border text-white",
    icon: JestIcon,
  },
  SpringbootIcon: {
    name: "Springboot",
    class: "border text-white",
    icon: SpringbootIcon,
  },
  NextIcon: {
    name: "Next",
    class: "border text-white",
    icon: NextIcon,
  },
  ReactIcon: {
    name: "React",
    class: "border text-white",
    icon: ReactIcon,
  },
  MongoIcon: {
    name: "MongoDB",
    class: "border text-white",
    icon: MongoIcon,
  },
  TailwindIcon: {
    name: "Tailwind",
    class: "border text-white",
    icon: TailwindIcon,
  },
  Angular: {
    name: "AngularJS",
    class: "border text-white",
    icon: AngularIcon,
  },
  Java: {
    name: "Java",
    class: "border text-white",
    icon: JavaIcon,
  },
  HTML: {
    name: "HTML",
    class: "border text-white",
    icon: HTMLIcon,
  },
  CSS: {
    name: "CSS",
    class: "border text-white",
    icon: CSSIcon,
  },
  Bootstrap: {
    name: "Bootstrap",
    class: "border text-white",
    icon: BootstrapIcon,
  },
  TypeScript: {
    name: "TypeScript",
    class: "border text-white",
    icon: TypeScriptIcon,
  },
  Postman: {
    name: "Postman",
    class: "border text-white",
    icon: PostmanIcon,
  },
  JWT: {
    name: "JWT",
    class: "border text-white",
    icon: JWTIcon,
  },
};
const PROJECTS = [
  {
    title: "KeepItUp",
    descriptionEs:
      "KeepItUpApp está orientada a fomentar la competitividad y el compromiso, permitiendo a los usuarios registrar su peso y entrenamientos, ser gestionados por entrenadores y visualizar resultados de forma sencilla.",
    descriptionEn:
      "KeepItUpApp is focused on boosting consistency and motivation. Users can log their weight and workouts, be coached by trainers and visualise their progress in a clear way.",
    url: "https://keepitupapp.com",
    image: "/projects/KeepItUp.webp",
    tags: [TAGS.Angular, TAGS.TypeScript, TAGS.TailwindIcon, TAGS.SpringbootIcon],
  },
  {
    title: "LouBooking",
    descriptionEs:
      "LouBooking es una plataforma web ligera para gestionar las reservas de un tatuador. Los clientes pueden consultar las jornadas disponibles y enviar solicitudes de cita sin necesidad de registrarse, mientras que el tatuador gestiona todas las peticiones desde un panel de administración protegido, aceptando o rechazando solicitudes y evitando dobles reservas al bloquear automáticamente los huecos confirmados. El proyecto está desarrollado con Angular 20 y TailwindCSS en el frontend, NestJS 11 con PostgreSQL y TypeORM en el backend, y se despliega en un VPS mediante Docker Compose.",
    descriptionEn:
      "LouBooking is a lightweight booking platform for tattoo artists. Clients can browse available sessions and request appointments without creating an account, while the artist manages requests from a secure admin panel that prevents double bookings by blocking confirmed time slots. It is built with Angular 20 and TailwindCSS on the frontend, NestJS 11 with PostgreSQL and TypeORM on the backend, and deployed on a VPS using Docker Compose.",
    url: "https://loubooking.com",
    image: "/projects/loubooking.webp",
    tags: [TAGS.Angular, TAGS.TypeScript, TAGS.TailwindIcon],
  },
  {
    title: "Petinder",
    descriptionEs:
      "Plataforma dedicada principalmente a dar visibilidad a las protectoras de animales con el objetivo de aumentar las adopciones, educar a los usuarios sobre la adopción responsable y reducir el abandono. Además, ofrece una amplia variedad de actividades, lugares para visitar y experiencias de viaje, brindando a los usuarios diversas opciones para disfrutar con sus mascotas.",
    descriptionEn:
      "Platform focused on giving visibility to animal shelters to increase adoptions, educate users about responsible adoption and reduce abandonment. It also offers activities, places to visit and travel ideas so people can enjoy more plans with their pets.",
    image: "/projects/petinder.webp",
    tags: [TAGS.NextIcon, TAGS.TypeScript, TAGS.TailwindIcon, TAGS.MongoIcon, TAGS.ReactIcon],
  },
  {
    title: "Stars League Fantasy",
    descriptionEs:
      "Stars League Fantasy es una aplicación de fantasía para entusiastas del fútbol, en la que los usuarios pueden crear equipos virtuales y competir en función de los resultados reales de sus jugadores seleccionados. Mi rol en este proyecto se centró en el desarrollo y mantenimiento del backend, donde realicé pruebas exhaustivas con Jest para asegurar la funcionalidad y consistencia de las características implementadas.",
    descriptionEn:
      "Stars League Fantasy is a fantasy football app where users build virtual teams and compete based on the real‑world performance of their players. My role focused on backend development and maintenance, writing thorough Jest tests to guarantee stability and reliability.",
    image: "/projects/starsleague.webp",
    tags: [TAGS.JestIcon, TAGS.TypeScript, TAGS.FirebaseIcon],
  },
  {
    title: "FranOnWheels",
    descriptionEs:
      "Primer proyecto adaptándome a nuevas tecnologías y lenguajes, aplicación destinada a la gestión automatizada de una autoescuela, tratando con usuarios, reserva de clases, vehículos y facilidad en control de datos sin necesidad de entrar al código.",
    descriptionEn:
      "My first full project exploring new technologies and languages: a management app for a driving school, handling users, class bookings and vehicles to simplify daily operations without touching the code.",
    github: "https://github.com/FranInfante/FranOnWheelsApp",
    image: "/projects/FranOnWheels.webp",
    tags: [
      TAGS.SpringbootIcon,
      TAGS.Java,
      TAGS.Angular,
      TAGS.TypeScript,
      TAGS.HTML,
      TAGS.CSS,
      TAGS.Bootstrap,
      TAGS.Postman,
      TAGS.JWT,
    ],
  },
  {
    title: "Profile Rooms",
    descriptionEs:
      "Proyecto que llevamos a delante en el equipo de Profile Software Services para permitir a personas ajenas a la empresa reservar salas disponibles, aquí aprendí a gestionar control de versiones dentro de un equipo profesional, afianzando lo ya aprendido y leyendo documentación con aspectos desconocidos de la programación.",
    descriptionEn:
      "Project developed with the team at Profile Software Services to let external users book available meeting rooms. I learned how to work with version control in a professional environment, consolidating what I already knew and diving into documentation for unfamiliar topics.",
    github: "https://github.com/FranInfante/ProfileRooms",
    image: "/projects/Rooms.webp",
    tags: [
      TAGS.SpringbootIcon,
      TAGS.Java,
      TAGS.Angular,
      TAGS.TypeScript,
      TAGS.HTML,
      TAGS.CSS,
      TAGS.Bootstrap,
      TAGS.Postman,
      TAGS.JWT,
    ],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, descriptionEs, descriptionEn, tags, github, url }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform overflow-clip rounded-xl sm:rounded-xl group-hover:-translate-y-2 group-hover:shadow-[0_24px_60px_rgba(15,23,42,0.9)]">
            <img
              alt="FranOnWheels Screenshot"
              class="object-cover object-top w-full h-auto transition duration-500 sm:h-full md:scale-110 group-hover:scale-105"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-white-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2 flex-wrap">
              {tags.map((tag) => (
                <li class="pb-2">
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-white-700 opacity-85 dark:text-gray-400">
              <p class="i18n-es">{descriptionEs}</p>
              <p class="i18n-en">{descriptionEn}</p>
            </div>
            <footer class="flex items-center justify-center w-full md:justify-start mt-4 gap-x-4">
              {url && (
                <LinkButton href={url}>
                  <span class="i18n-es">Ver proyecto</span>
                  <span class="i18n-en">View project</span>
                </LinkButton>
              )}
              {github && (
                <LinkButton href={github}>
                  <GithubIcon class="size-6" />
                  <span class="i18n-es">Código</span>
                  <span class="i18n-en">Source</span>
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
