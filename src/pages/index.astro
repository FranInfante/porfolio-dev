---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import Socials from "../components/Socials.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import GithubIcon from "../components/icons/GithubIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
import ProfileIcon from "../components/icons/ProfileIcon.astro";
import About from "../components/About.astro";
---

<Layout
  title="Fran Infante · Full-Stack Web Developer"
  description="Portfolio de Fran Infante, desarrollador web full‑stack con experiencia en Angular, NestJS y tecnologías modernas. Full‑Stack Web Developer based in Seville, Spain."
>
  <main class="px-2">
    <SectionContainer class="py-24 pb-24">
      <img
        class="rounded-full size-[200px] "
        src="/pfp.png"
        alt="Fran photo"
      />
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold pb-3 flex flex-col lg:flex-row lg:items-center lg:gap-x-4"
      >
        <span class="i18n-es">Buenas, soy Fran</span>
        <span class="i18n-en">Hi, I'm Fran</span>
        <a
          href="https://www.linkedin.com/in/franinfante/"
          target="_blank"
          class="lg:ml-4 justify-center"
          rel="noopener"
        >
          <Badge>
            <span class="i18n-es">Disponible para trabajar</span>
            <span class="i18n-en">Open to opportunities</span>
          </Badge>
        </a>
      </h1>
      
      <h2 class="text-2xl text-wrap max-w-[700px]">
        <span class="i18n-es">
          <span>Desarrollador Web Full-Stack</span>. <span
            class="text-yellow-200/90">De Sevilla, España</span
          >. <span class="opacity-75 font-semibold"
            >Graduado en Desarrollo de Aplicaciones Web</span
          >.
        </span>
        <span class="i18n-en">
          <span>Full-Stack Web Developer</span>. <span
            class="text-yellow-200/90">Based in Seville, Spain</span
          >. <span class="opacity-75 font-semibold"
            >Graduate in Web Application Development</span
          >.
        </span>
      </h2>

      <nav class="flex gap-x-4 mt-6 flex-wrap">
        <Socials href="https://www.linkedin.com/in/franinfante/">
          <LinkedInIcon class="size-4" />
          LinkedIn
        </Socials>
        <Socials href="https://github.com/FranInfante">
          <GithubIcon class="size-4" />
          Github
        </Socials>
        <Socials href="mailto:fjinfantejob@gmail.com">
          <MailIcon class="size-4" />
          fjinfantejob@gmail.com
        </Socials>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia" class="py-10">
      <h2 class="text-2xl ml-8 font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-8" />
        <span class="i18n-es">Experiencia laboral</span>
        <span class="i18n-en">Work experience</span>
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos" class="py-10">
      <h2 class="text-2xl ml-8 font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-8" />
        <span class="i18n-es">Proyectos</span>
        <span class="i18n-en">Projects</span>
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="aboutme" class="py-10">
      <h2 class="text-2xl font-semibold justify-center flex gap-x-3 items-center">
        <ProfileIcon class="size-8" />
        <span class="i18n-es">Sobre mí</span>
        <span class="i18n-en">About me</span>
      </h2>
      <About />
    </SectionContainer>
  </main>
</Layout>
